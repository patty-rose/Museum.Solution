@{
  Layout = "_Layout";
}

@model Museum.Models.Artist

<h2>Artist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.ArtistName): @Html.DisplayFor(model => model.ArtistName)<h3>

<h3>@Html.Label("Gallery"): 
@foreach(var join in Model.JoinArtistGallery)
    {
      <p>@join.Gallery.GalleryName</p>
    }
  
@if(@Model.JoinArtistArtWork.Count == 0)
{
  <p>This Artist does not contain any Artworks</p>
}
else
{
  <h4>Artworks:</h4>
  <ul>
  @foreach(var join in Model.JoinArtistArtWork)
  {
    <li>@join.Artwork.Title</li>
  }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add Artwork", "Create", "Artworks")</p>
<p>@Html.ActionLink("Edit Artist", "Edit", new { id = Model.ArtistId })</p>
<p>@Html.ActionLink("Delete Artist", "Delete", new { id = Model.ArtistId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>