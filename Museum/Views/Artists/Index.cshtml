@{
  Layout = "_Layout";
} 

@using Museum.Models;
@model List<Museum.Models.Artist>;

<h1>Artists</h1>

@if (@Model.Count == 0)
{
  <h3>No artists have been added yet!</h3>
} 

<ul>
  @foreach(Artist artist in Model)
  {
    <li>@Html.ActionLink($"{artist.ArtistName}", "Details", new { id = artist.ArtistId })</li>
  }
</ul>
<hr />
<p>@Html.ActionLink("Add new artist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>